{
  "name": "test-automation",
  "version": "1.0.0",
  "description": "Project to showcase test automation practices",
  "type": "module",
  "scripts": {
    "test:ui": "npm run wdio",
    "test:api": "mocha --config api.mocharc.cjs",
    "test:a11y": "wdio ./tests/accessibility/a11y.wdio.conf.js",
    "test:load": "k6 run tests/load/load-test.js",
    "test:data": "mocha --config data.mocharc.cjs",
    "prepare": "husky",
    "wdio": "wdio run wdio.conf.mjs",
    "allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "sitespeed": "bash tests/web-performance/performance-check.sh"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,ts,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@wdio/allure-reporter": "^9.22.0",
    "allure-commandline": "^2.36.0",
    "allure-mocha": "^3.4.4",
    "eslint": "^9.39.2",
    "eslint-plugin-wdio": "^9.23.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@axe-core/webdriverio": "^4.11.0",
    "@wdio/cli": "^9.23.0",
    "@wdio/globals": "^9.23.0",
    "@wdio/local-runner": "^9.23.0",
    "@wdio/mocha-framework": "^9.23.0",
    "@wdio/spec-reporter": "^9.20.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chai": "^6.2.2",
    "chai-superagent": "^4.0.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "sitespeed.io": "^39.2.0",
    "superagent": "^10.3.0",
    "wdio-intercept-service": "^4.4.1",
    "wdio-wait-for": "^3.1.1"
  }
}
