{
  "name": "test-automation",
  "version": "1.0.0",
  "description": "Project to showcase test automation practices",
  "type": "module",
  "scripts": {
    "test:ui": "npm run wdio",
    "test:api": "mocha --config api.mocharc.cjs",
    "test:a11y": "wdio ./tests/accessibility/a11y.wdio.conf.js",
    "test:load": "k6 run tests/load/load-test.js",
    "test:data": "mocha --config data.mocharc.cjs",
    "prepare": "husky",
    "wdio": "wdio run ./wdio.conf.js",
    "allure": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,ts,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@wdio/allure-reporter": "^9.18.0",
    "allure-commandline": "^2.34.1",
    "allure-mocha": "^3.3.2",
    "eslint": "^9.31.0",
    "eslint-plugin-wdio": "^9.16.2",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "@axe-core/webdriverio": "^4.10.2",
    "@wdio/cli": "^9.18.1",
    "@wdio/globals": "^9.17.0",
    "@wdio/local-runner": "^9.18.1",
    "@wdio/mocha-framework": "^9.18.0",
    "@wdio/spec-reporter": "^9.18.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chai": "^5.2.1",
    "chai-superagent": "^3.1.0",
    "dotenv": "^17.2.0",
    "pg": "^8.16.3",
    "superagent": "^10.2.3",
    "wdio-intercept-service": "^4.4.1",
    "wdio-wait-for": "^3.1.0"
  }
}
