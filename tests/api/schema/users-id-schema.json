{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Reqres API Single User Response or Error",
  "description": "Schema for the response when retrieving a single user from Reqres.in API, accounting for successful responses and 404 Not Found with an empty body.",
  "oneOf": [
    {
      "title": "Successful Single User Response",
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "Unique ID of the user.",
              "minimum": 1
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "Email address of the user."
            },
            "first_name": {
              "type": "string",
              "description": "First name of the user."
            },
            "last_name": {
              "type": "string",
              "description": "Last name of the user."
            },
            "avatar": {
              "type": "string",
              "format": "url",
              "description": "URL to the user's avatar image."
            }
          },
          "required": ["id", "email", "first_name", "last_name", "avatar"],
          "additionalProperties": true
        },
        "support": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri",
              "description": "URL for support information."
            },
            "text": {
              "type": "string",
              "description": "Support message."
            }
          },
          "required": ["url", "text"],
          "additionalProperties": true
        },
        "_meta": {
          "type": "object",
          "properties": {
            "powered_by": { "type": "string" },
            "docs_url": { "type": "string", "format": "uri" },
            "upgrade_url": { "type": "string", "format": "uri" },
            "example_url": { "type": "string", "format": "uri" },
            "variant": { "type": "string" },
            "message": { "type": "string" },
            "cta": {
              "type": "object",
              "required": ["label", "url"],
              "properties": {
                "label": { "type": "string" },
                "url": { "type": "string", "format": "uri" }
              }
            },
            "context": { "type": "string" }
          },
          "required": [
            "powered_by",
            "docs_url",
            "upgrade_url",
            "example_url",
            "variant",
            "message",
            "cta",
            "context"
          ]
        }
      },
      "required": ["data", "support", "_meta"],
      "additionalProperties": true
    },
    {
      "title": "Error Response (404 Not Found - Empty Object)",
      "type": "object",
      "properties": {},
      "required": [],
      "additionalProperties": false,
      "description": "Represents an empty JSON object, typically returned by Reqres.in for a 'resource not found' (404) error when the ID is invalid (e.g., non-integer)."
    }
  ]
}
